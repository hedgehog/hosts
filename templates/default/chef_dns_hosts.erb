127.0.0.1 localhost <%= @node[:hosts][:localhost_aliases].join(" ") if @node[:hosts][:localhost_aliases] %>
127.0.1.1 <%= @node['fqdn'] %> <%= @node['hostname'] %> <%= "chef.#{@node['domain']}" if @node.run_list.include?("recipe[chef::server]") %>

<%= @ipadress %>   chefserver.taqtik.com chefserver

<% if @hosts.size > 0 %>
<% @node[:hosts][:entries].each do |ip, name| %>
<%= ip %> <%= name %> <%= (@hosts[ip]["dns_aliases"] || []).sort.join(" ") %>
<% end %>
<% end %>

<% @hosts.keys.sort.each do |fqdn| %>
<%= @hosts[fqdn][:ipaddress] %> <%= fqdn %> <%= @hosts[fqdn][:hostname] %>
<% end %>

# The following lines are desirable for IPv6 capable hosts
::1 ip6-localhost ip6-loopback
fe00::0 ip6-localnet
ff00::0 ip6-mcastprefix
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters
ff02::3 ip6-allhosts
